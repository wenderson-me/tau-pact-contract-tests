  "homepage": "",
  "devDependencies": {
    "@pact-foundation/pact": "^13.0.0",
    "axios": "^1.6.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "eslint": "^8.0.0",
    "express": "^4.18.0",
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
